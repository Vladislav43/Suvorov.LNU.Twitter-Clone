@page
@model CreateUserModel
@{
    ViewData["Title"] = "Create user";
}

<br />
<h2 class="text-info">Create new user</h2>
<br />

<div class="border container" style="padding: 30px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="User.Name">Name</label>
            </div>
            <div class="col-6">
                <input asp-for="User.Name" class="form-control" />
                @Html.ValidationMessage("User.Name")
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="User.UserName">Username</label>
            </div>
            <div class="col-6">
                <input asp-for="User.UserName" class="form-control" />
                @Html.ValidationMessage("User.UserName")
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="User.EmailAddress">Email address</label>
            </div>
            <div class="col-6">
                <input asp-for="User.EmailAddress" class="form-control" />
                @Html.ValidationMessage("User.EmailAddress")
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="User.Password">Password</label>
            </div>
            <div class="col-6">
                <input asp-for="User.Password" class="form-control" />
                @Html.ValidationMessage("User.Password")
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="User.Age">Age</label>
            </div>
            <div class="col-6">
                <input asp-for="User.Age" class="form-control" />
                @Html.ValidationMessage("User.Age")
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="User.PhoneNumber">Phone number(Not required)</label>
            </div>
            <div class="col-6">
                <input asp-for="User.PhoneNumber" class="form-control" />
                @Html.ValidationMessage("User.PhoneNumber")
            </div>
        </div>

        <div class="col-3">
            <input type="submit" class="w-100 form-control" />
        </div>
    </form>
</div>